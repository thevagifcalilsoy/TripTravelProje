@using TravelTripProje.Models.Siniflar
@model List<Yorumlar>

@{
    ViewBag.Title = "YorumYap";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanici Adi</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncəllə</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.KullaniciAdi</td>
            <td>@x.Mail</td>
            <td>@x.Yorum</td>
            <td>@x.Blog.Baslik</td>
            <td><a href="/Admin/YorumSil/@x.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YorumGetir/@x.Id" class="btn btn-warning">Güncəllə</a></td>
        </tr>
    }
</table>
